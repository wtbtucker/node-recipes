<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="content">
    <div class="details content">
      <h2 class="details title"><%= recipe.title %></h2>
      <h3 class="details heading">Ingredients</h3>
      <ul class="details ingredients">
        <% for (let key of recipe.ingredients.keys()) { %>
          <li><%= recipe.ingredients.get(key) %> <%= key %>
          </li>
        <% } %>
        </ul>
      <h3 class="details heading">Instructions</h3>
      <ol class="details instructions">
        <% for (let step of recipe.instructions) { %>
          <li>
            <%= step %>
          </li>
        <% } %>
      </ol>
      <% if (recipe.creator == user) { %>
        <form action="/recipes/remove/<%= recipe._id %>">
          <input type="submit" class = "submit" value="delete">
        </form>
        <form action="/recipes/edit/<%= recipe._id %>">
          <input type="submit" class = "submit" value="edit">
        </form>
      <% } %>

    </div>
    <%- include("./partials/footer.ejs") %>
  </div>
</body>
</html>